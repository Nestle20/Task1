<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.task1ing.HelloController">
  <Canvas fx:id="canvas" width="800" height="600"/>
  <ColorPicker fx:id="colorPicker"/>
  <TextField fx:id="numberOfShapesInput" promptText="Введите количество фигур"/>
  <HBox spacing="10" alignment="CENTER">
    <Button text="Нарисовать Прямоугольник" onAction="#drawRectangle"/>
    <Button text="Нарисовать Круг" onAction="#drawCircle"/>
    <Button text="Нарисовать Эллипс" onAction="#drawEllipse"/>
    <Button text="Нарисовать Квадрат" onAction="#drawSquare"/>
    <Button text="Нарисовать Скругленный Прямоугольник" onAction="#drawRoundedRectangle"/>
  </HBox>
</VBox>
